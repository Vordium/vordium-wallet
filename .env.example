# Vordium Wallet Environment Configuration
# Copy this file to .env.local and fill in your API keys

# ===========================================
# BLOCKCHAIN RPC ENDPOINTS
# ===========================================

# Ethereum Mainnet RPC (Required for ETH and ERC-20 tokens)
NEXT_PUBLIC_ETHEREUM_RPC=https://eth.llamarpc.com

# Polygon RPC (Optional - for Polygon support)
NEXT_PUBLIC_POLYGON_RPC=https://polygon-rpc.com

# BSC RPC (Optional - for BSC support)  
NEXT_PUBLIC_BSC_RPC=https://bsc-dataseed1.binance.org

# Arbitrum RPC (Optional - for Arbitrum support)
NEXT_PUBLIC_ARBITRUM_RPC=https://arb1.arbitrum.io/rpc

# TRON API (Required for TRX and TRC-20 tokens)
NEXT_PUBLIC_TRON_API=https://api.trongrid.io

# TRON API Key (Optional - for higher rate limits)
NEXT_PUBLIC_TRONGRID_API_KEY=your_trongrid_api_key_here

# ===========================================
# WALLETCONNECT CONFIGURATION
# ===========================================

# WalletConnect Project ID (Required for dApp connections)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# ===========================================
# OPTIONAL API KEYS (For Enhanced Features)
# ===========================================

# Infura API Key (Optional - faster Ethereum RPC)
# NEXT_PUBLIC_INFURA_PROJECT_ID=your_infura_project_id

# Alchemy API Key (Optional - alternative to Infura)
# NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key

# CoinGecko API Key (Optional - for higher rate limits)
# NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug logging (development only)
NEXT_PUBLIC_DEBUG=false

# Enable test mode (development only)
NEXT_PUBLIC_TEST_MODE=false
